<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.project.jaijite.gui.ColorPickerView
        android:id="@+id/cpv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:src="@mipmap/ic_1_r" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:src="@mipmap/ic_2_g" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:src="@mipmap/ic_3_b" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:src="@mipmap/ic_4_y" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:src="@mipmap/ic_5_p" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:src="@mipmap/ic_6_c" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivTimer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_setting_left" />
</RelativeLayout>
